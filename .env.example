# ===========================================
# BASELY - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ===========================================
# Telegram Bot Configuration
# ===========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook URL for production (Vercel deployment)
# Example: https://your-app.vercel.app/api/webhook
TELEGRAM_WEBHOOK_URL=

# ===========================================
# Base Blockchain Configuration
# ===========================================
# Base Sepolia Testnet RPC URL
# Get free RPC from: https://www.alchemy.com or https://www.infura.io
BASE_RPC_URL=https://sepolia.base.org

# Alternative: Use Alchemy or Infura
# BASE_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# BASE_RPC_URL=https://base-sepolia.infura.io/v3/YOUR_PROJECT_ID

# Chain ID (84532 for Base Sepolia, 8453 for Base Mainnet)
CHAIN_ID=84532

# ===========================================
# Wallet Configuration (CRITICAL - KEEP SECRET!)
# ===========================================
# Your wallet private key (with 0x prefix)
# WARNING: Use a dedicated testnet wallet, NEVER use your main wallet!
# To generate a new wallet: https://vanity-eth.tk/
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Public wallet address (derived from private key)
WALLET_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# ===========================================
# Smart Contract Addresses
# ===========================================
# Deploy the StakingPool contract and add address here
STAKING_POOL_ADDRESS=

# Token addresses on Base Sepolia
# WETH on Base Sepolia
WETH_ADDRESS=0x4200000000000000000000000000000000000006

# Example ERC20 token for testing
TEST_TOKEN_ADDRESS=

# Uniswap V3 Router on Base Sepolia (if available)
UNISWAP_ROUTER_ADDRESS=

# ===========================================
# AI Configuration (Optional - for future integration)
# ===========================================
# Anthropic Claude API Key
ANTHROPIC_API_KEY=

# OpenAI API Key (alternative)
OPENAI_API_KEY=

# ===========================================
# Application Configuration
# ===========================================
# Environment mode
NODE_ENV=development

# Next.js URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Security & Rate Limiting
# ===========================================
# Enable/disable security features
ENABLE_RATE_LIMITING=true

# Maximum requests per user per minute
RATE_LIMIT_MAX=10

# ===========================================
# Logging & Monitoring
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable verbose logging for debugging
DEBUG=false
